<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1A1F2B;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2f3441;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="threat" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff4444;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#cc0000;stop-opacity:0.8" />
    </linearGradient>
  </defs>
  
  <rect width="800" height="600" fill="url(#bg)"/>
  
  <!-- Cloud Security Architecture -->
  <g transform="translate(50, 50)">
    <!-- AWS Cloud -->
    <rect x="50" y="50" width="650" height="400" rx="15" fill="none" stroke="#FF9900" stroke-width="3" stroke-dasharray="10,5"/>
    <text x="375" y="40" text-anchor="middle" fill="#FF9900" font-family="Arial" font-size="16" font-weight="bold">AWS Cloud</text>
    
    <!-- EC2 Instance -->
    <rect x="100" y="100" width="120" height="80" rx="8" fill="#FF9900" opacity="0.8"/>
    <text x="160" y="145" text-anchor="middle" fill="white" font-family="Arial" font-size="12" font-weight="bold">EC2 Instance</text>
    
    <!-- Network Traffic -->
    <rect x="280" y="100" width="120" height="80" rx="8" fill="#4E9AF1" opacity="0.8"/>
    <text x="340" y="140" text-anchor="middle" fill="white" font-family="Arial" font-size="11" font-weight="bold">Network Traffic</text>
    <text x="340" y="155" text-anchor="middle" fill="white" font-family="Arial" font-size="11" font-weight="bold">(tcpdump)</text>
    
    <!-- ML Model -->
    <rect x="460" y="100" width="120" height="80" rx="8" fill="#4CAF50" opacity="0.8"/>
    <text x="520" y="140" text-anchor="middle" fill="white" font-family="Arial" font-size="11" font-weight="bold">ANN Model</text>
    <text x="520" y="155" text-anchor="middle" fill="white" font-family="Arial" font-size="11" font-weight="bold">98.24% Accuracy</text>
    
    <!-- Alert System -->
    <rect x="280" y="250" width="120" height="80" rx="8" fill="url(#threat)"/>
    <text x="340" y="290" text-anchor="middle" fill="white" font-family="Arial" font-size="12" font-weight="bold">SMTP Alerts</text>
    
    <!-- Threat Types -->
    <circle cx="150" cy="350" r="30" fill="#ff4444" opacity="0.7"/>
    <text x="150" y="355" text-anchor="middle" fill="white" font-family="Arial" font-size="10" font-weight="bold">DoS</text>
    
    <circle cx="250" cy="350" r="30" fill="#ff4444" opacity="0.7"/>
    <text x="250" y="355" text-anchor="middle" fill="white" font-family="Arial" font-size="10" font-weight="bold">DDoS</text>
    
    <circle cx="350" cy="350" r="30" fill="#ff4444" opacity="0.7"/>
    <text x="350" y="355" text-anchor="middle" fill="white" font-family="Arial" font-size="10" font-weight="bold">SQLi</text>
    
    <!-- Connection arrows -->
    <line x1="220" y1="140" x2="280" y2="140" stroke="#F1F1F1" stroke-width="3" marker-end="url(#arrowhead)"/>
    <line x1="400" y1="140" x2="460" y2="140" stroke="#F1F1F1" stroke-width="3" marker-end="url(#arrowhead)"/>
    <line x1="520" y1="180" x2="400" y2="250" stroke="#F1F1F1" stroke-width="3" marker-end="url(#arrowhead)"/>
    
    <!-- Title -->
    <text x="375" y="30" text-anchor="middle" fill="#F1F1F1" font-family="Arial" font-size="22" font-weight="bold">Cloud Threat Detection System</text>
    <text x="375" y="480" text-anchor="middle" fill="#F1F1F1" font-family="Arial" font-size="14">Python • TensorFlow • AWS EC2 • Machine Learning • Real-time Detection</text>
  </g>
  
  <!-- Arrow marker definition -->
  <defs>
    <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="0" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#F1F1F1" />
    </marker>
  </defs>
</svg>
