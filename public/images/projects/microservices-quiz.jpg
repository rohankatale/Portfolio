<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1A1F2B;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2f3441;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="800" height="600" fill="url(#bg)"/>
  
  <!-- Microservices Architecture Diagram -->
  <g transform="translate(50, 50)">
    <!-- Service boxes -->
    <rect x="50" y="100" width="120" height="80" rx="8" fill="#4E9AF1" opacity="0.8"/>
    <text x="110" y="145" text-anchor="middle" fill="white" font-family="Arial" font-size="12" font-weight="bold">Quiz Service</text>
    
    <rect x="200" y="100" width="120" height="80" rx="8" fill="#4E9AF1" opacity="0.8"/>
    <text x="260" y="145" text-anchor="middle" fill="white" font-family="Arial" font-size="12" font-weight="bold">Question Service</text>
    
    <rect x="350" y="100" width="120" height="80" rx="8" fill="#4E9AF1" opacity="0.8"/>
    <text x="410" y="145" text-anchor="middle" fill="white" font-family="Arial" font-size="12" font-weight="bold">API Gateway</text>
    
    <rect x="500" y="100" width="120" height="80" rx="8" fill="#4E9AF1" opacity="0.8"/>
    <text x="560" y="145" text-anchor="middle" fill="white" font-family="Arial" font-size="12" font-weight="bold">Eureka Registry</text>
    
    <!-- Database -->
    <rect x="225" y="250" width="150" height="60" rx="8" fill="#E6B980" opacity="0.8"/>
    <text x="300" y="285" text-anchor="middle" fill="#1A1F2B" font-family="Arial" font-size="12" font-weight="bold">PostgreSQL</text>
    
    <!-- Connection lines -->
    <line x1="110" y1="180" x2="110" y2="220" stroke="#F1F1F1" stroke-width="2"/>
    <line x1="260" y1="180" x2="260" y2="220" stroke="#F1F1F1" stroke-width="2"/>
    <line x1="110" y1="220" x2="300" y2="220" stroke="#F1F1F1" stroke-width="2"/>
    <line x1="260" y1="220" x2="300" y2="220" stroke="#F1F1F1" stroke-width="2"/>
    <line x1="300" y1="220" x2="300" y2="250" stroke="#F1F1F1" stroke-width="2"/>
    
    <!-- Title -->
    <text x="360" y="40" text-anchor="middle" fill="#F1F1F1" font-family="Arial" font-size="24" font-weight="bold">Microservices Quiz Application</text>
    <text x="360" y="400" text-anchor="middle" fill="#F1F1F1" font-family="Arial" font-size="16">Spring Boot • Spring Cloud • PostgreSQL • Maven</text>
  </g>
</svg>
